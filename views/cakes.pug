extends layout

block content
  h1= title
  script.
  - let results = [{ cake_flavour: "Vanilla", weight: "2lb", cake_cost: 20 },{ cake_flavour: "Chocolate", weight: "3lb", cake_cost: 30 },{ cake_flavour: "Oreo", weight: "4lb", cake_cost: 40 }]
  div(class='container-fluid')
    div(class='row')
      each i,index in results
        div(class= "col-sm-2" onclick =`buy(${index})`) Cake Flavour: #{i.cake_flavour}, <br> Cake weight: #{i.weight}, <br> Cake Cost :#{i.cake_cost}
        script.
          function buy(index)
          {
            alert(`You purchased Item ${index + 1}`)
          }